@page "/users"

<section id="">
    <div class="container">
        <p>Текущее время: @CurrentTime</p>
        <p>Текущая дата: @CurrentDate</p>

        <h1>Пользователи</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">UserId</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">CreatedAt</th>
                    <th scope="col">CurrencyGame</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in result)
                {
                    <tr>
                        <th scope="row">@user.UserId</th>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.CreatedAt.ToShortDateString()</td>
                        <td>@user.CurrencyGame</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>


@code {
    public class User
    {
        public int UserId { get; set; }
        public string Username { get; set; }
        public string Email { get; set; }
        public string PasswordHash { get; set; }
        public DateTime CreatedAt { get; set; }
        public DateTime LastLogin { get; set; }
        public int CurrencyClick { get; set; }
        public int CurrencyGame { get; set; }
    }

    public User[] result = new User[] { };

    string CurrentDate;
    string CurrentTime;

    protected override async Task OnInitializedAsync()
    {
        var date = DateTime.Now;
        CurrentDate = date.ToShortDateString();
        CurrentTime = date.ToShortTimeString();

        var client = new HttpClient();
        client.BaseAddress = new Uri("https://spelllearning-production.up.railway.app/");

        result = await client.GetFromJsonAsync<User[]>("api/User");

        return;
    }
}